<!DOCTYPE html>
<html>

<head>
  <title>User Lists</title>
  <style>
    body {
      background-color: #BEFFF7;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    h1 {
      text-align: center;
      font-size: 28px;
      margin-top: 20px;
    }

    table {
      border-collapse: collapse;
      width: 100%;
      background-color: #9EDDFF;
      margin: 20px auto;
      table-layout: fixed; 
    }

    th,
    td {
      border: 1px solid #ddd;
      padding: 10px;
      text-align: left;
      width: 20%; 
      vertical-align: middle; 
      text-align: center;
    }

    th {
      background-color: #6499E9;
      font-weight: bold;
    }

    tbody tr {
      text-align: center;
    }
    

    .edit-link {
      color: #007bff;
      text-decoration: none;
      transition: color 0.3s;
    }

    .edit-link:hover {
      color: #0056b3;
    }

    .overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 1000;
      justify-content: center;
      align-items: center;
    }

    .user-form {
      background-color: #A6F6FF;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    
    button {
      background-color: #6499E9; 
      color: white;
      border: none;
      padding: 10px 20px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    
    button:hover {
      background-color: #007bff !important;
    }

    
    .user-functions {
      text-align: center;
    }

    .user-functions button {
      margin-right: 50px; 
    }
  </style>
</head>

<body>
  <h1>List of Users</h1>
  <p>User counter: <%= userList.length %>
  </p>
  <button onclick="toggleUserForm()">Create User</button>

  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>User Functions</th>
      </tr>
    </thead>
    <tbody>
      <% userList.forEach((user)=> { %>
        <tr>
          <td>
            <%= user.email %>
          </td>
          <td>
            <%= user.firstname %>
          </td>
          <td>
            <%= user.lastname %>
          </td>
          <td class="user-functions">
            <a href="/edituser/<%= user.id %>"><button>Edit</button></a>
            <a href="/deleteuser/<%= user.id %>"><button>Delete</button></a>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>


  <div class="overlay" id="userFormOverlay" onclick="closeUserForm(event)">
    <div class="user-form" id="userFormContainer">
      <%- include('userForm.ejs') %>
    </div>
  </div>

  <script>

    function toggleUserForm() {
      var userFormOverlay = document.getElementById('userFormOverlay');
      if (userFormOverlay.style.display === 'block') {
        userFormOverlay.style.display = 'none';
      } else {
        userFormOverlay.style.display = 'block';
      }
    }


    function closeUserForm() {
      var userFormOverlay = document.getElementById('userFormOverlay');
      var closeButton = document.getElementById('closeButton');


      if (event.target === userFormOverlay || event.target === closeButton) {
        userFormOverlay.style.display = 'none';
      }
    }

  </script>
</body>

</html>